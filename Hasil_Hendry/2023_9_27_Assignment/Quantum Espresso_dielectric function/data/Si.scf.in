&CONTROL
  calculation = 'scf',
  prefix = 'si',
  outdir = '../tmp/'
  pseudo_dir = '../pseudos/'
  verbosity = 'high'
/

&SYSTEM
  ibrav =  2,
  celldm(1) = 10.26,
  nat =  2,
  ntyp = 1,
  ecutwfc = 40
  nbnd = 20
  nosym = .TRUE.
  noinv = .TRUE.
/

&ELECTRONS
  mixing_beta = 0.6
/

ATOMIC_SPECIES
  Si 28.086 Si.pz-vbc.UPF

ATOMIC_POSITIONS (alat)
  Si 0.0 0.0 0.0
  Si 0.25 0.25 0.25

K_POINTS automatic
  4 4 4 1 1 1
